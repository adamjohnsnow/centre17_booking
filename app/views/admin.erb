<div class="table">
  <div class="table-body">
    <div class="table-row">
      <div class="table-cell">

        <h3>On Today</h3>
        <% @today_events.each do |slot| %>
          <%= slot.hour %>:00
          <% if slot.bookings.count > 0 %>
            <span class="event">
              <%= slot.bookings.first.title %>
            </span>
          <% end %><br>
        <% end %>

      </div>
      <div class="table-cell">

        <h3>On Tomorrow</h3>
        <% @tomorrow_events.each do |slot| %>
          <%= slot.hour %>:00
          <% if slot.bookings.count > 0 %>
            <span class="event">
              <%= slot.bookings.first.title %>
            </span>
          <% end %><br>
        <% end %>

      </div>
      <div class="table-cell">

        <h3>Event Requests</h3>
        <% @pending_event.each do |event| %>
          <%= event.title %> - <%= event.slots.first.date.strftime("%d/%m/%Y") %>
          <%= event.slots.first.hour %>:00 - <%= event.slots.last.hour + 1 %>:00<br>
        <% end %><br>
        <h3>User Requests</h3>
        <% @pending_users.each do |user| %>
          <%= user.firstname %> <%= user.surname %> (<%= user.email %>)<br>
        <% end %>
      </div>

    </div>

  </div>
</div>
